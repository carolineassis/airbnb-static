       <!-- Your banner code -->
      <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://unsplash.it/1000x1000/?random');">
        <div class="banner-content">
          <h1>WELCOME HOME</h1>
          <p>Rent unique places to stay from local hosts in 190+ countries.</p>
          <form action="#" class="form-inline">
            <input type="checkin" class="form-control input-lg" placeholder="checkin">
            <input type="checkout" class="form-control input-lg" placeholder="checkout">
            <select class="form-control input-lg">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
            <input type="submit" value="Search" class="btn btn-primary btn-lg">
          </form>
        </div>
      </div>

      <!-- Your features code -->
      <div class="text-center padded features">
        <div class="container">
          <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "globe.png" %>
              <h2>Discover the world</h2>
              <p>The earth is your new home.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "dollar.png" %>
              <h2>Pay online</h2>
              <p>No cash issues anymore.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "beer.png" %>
              <h2>Meet people</h2>
              <p>Discover new culture and lifestyle.</p>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
              <%= image_tag "heart.png" %>
              <h2>Share and love</h2>
              <p>Join a community you will love.</p>
            </div>
          </div>
        </div>
      </div>
